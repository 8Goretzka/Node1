<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <title>게시판</title>
  </head>
  <body>
    <%- include('header.html') %>
    
    <div style="margin-top:50px;"></div>
    <div class="card" style="margin:0 auto ;width: 80%;">
    <h1 style="text-align:center;margin-top: 30px;">게시판</h1>
   
    <form action="/ok" method="post">
        <div class="form-group" style="width:80% ;margin:0 auto ">
          <label for="exampleInputEmail1">제 목</label>
          <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required
          placeholder="제목을 입력하세요">

        </div>
        <div class="form-group" style="width:80% ;margin:0 auto ">
          <label for="exampleInputEmail1">이 름</label>
          <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required
          placeholder="이름을 입력하세요">

        </div>

        <div class="form-group" style="width:80% ;margin:0 auto ">
          <label for="exampleInputPassword1">날 짜</label>
          <input type="date" name="wdate" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="form-group" style="width:80% ;margin:0 auto ">
          <label for="validationTextarea">글내용</label>
          <textarea class="form-control" name="memo" rows="5" id="validationTextarea" placeholder="글 내용을 입력하세요" required></textarea>
        </div>


    

        
        <div style="width:100%;text-align: center;margin: 30px 0;">
        <button type="submit" class="btn btn-secondary btn-lg" >작성</button>
        </div>
      </form>
    </div>
    
    <%- include('footer.html') %>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>

    
  </body>
</html>